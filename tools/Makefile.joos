AS = nasm
ASFLAGS = -O1 -f elf -g -F dwarf
LD = ld
LDFLAGS = -melf_i386

ASRCDIR = output
BINDIR = output
ASRC = $(wildcard $(ASRCDIR)/*.asm)
OBJ = $(ASRC:%.asm=%.o)
TARGET = $(BINDIR)/main

.PHONY : all
all : $(TARGET)

$(ASRCDIR)/%.o : $(ASRCDIR)/%.asm
	$(AS) $(ASFLAGS) -o $@ $<

$(TARGET) : $(OBJ)
	$(LD) $(LDFLAGS) -o $@ $^
